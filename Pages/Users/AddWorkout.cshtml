@page
@model Final.Pages.AddWorkoutModel

@{
    ViewData["Title"] = "Add Workout";
}

<h3>Add a Workout:</h3>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Workout.UserId" class="control-label"></label>
                <select asp-for="Workout.UserId" asp-items="Model.UsersDropDown" class="form-control">
                    <option value="">--Select User Name--</option> 
                </select>
                <span asp-validation-for="Workout.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Workout.DateCompleted" class="control-label"></label>
                <input asp-for="Workout.DateCompleted" class="form-control" />
                <span asp-validation-for="Workout.DateCompleted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Workout.Calories" class="control-label"></label>
                <input asp-for="Workout.Calories" class="form-control" />
                <span asp-validation-for="Workout.Calories" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Workout.WorkoutLength" class="control-label"></label>
                <input asp-for="Workout.WorkoutLength" class="form-control" />
                <span asp-validation-for="Workout.WorkoutLength" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Workout.WorkoutType" class="control-label"></label>
                <input asp-for="Workout.WorkoutType" class="form-control" />
                <span asp-validation-for="Workout.WorkoutType" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Add Workout" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}